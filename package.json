{
  "name": "cursor-autocorrect",
  "displayName": "Cursor Autocorrect",
  "description": "Basic autocorrect functionality for text files in Cursor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ccrozier/cursor-autocorrect.git"
  },
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-autocorrect.toggleAutocorrect",
        "title": "Toggle Autocorrect"
      },
      {
        "command": "cursor-autocorrect.correctCurrentWord",
        "title": "Correct Current Word"
      }
    ],
    "keybindings": [
      {
        "command": "cursor-autocorrect.correctCurrentWord",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Cursor Autocorrect",
      "properties": {
        "cursor-autocorrect.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable autocorrect functionality"
        },
        "cursor-autocorrect.languages": {
          "type": "array",
          "default": ["plaintext", "markdown", "text"],
          "description": "File types where autocorrect should be active"
        },
        "cursor-autocorrect.corrections": {
          "type": "object",
          "default": {
            "teh": "the",
            "adn": "and",
            "ot": "to",
            "fo": "of",
            "taht": "that",
            "wiht": "with",
            "htis": "this",
            "si": "is",
            "ont": "not",
            "cna": "can",
            "woudl": "would",
            "shoudl": "should",
            "coudl": "could",
            "jsut": "just",
            "recieve": "receive",
            "seperate": "separate",
            "occured": "occurred",
            "definately": "definitely"
          },
          "description": "Custom word corrections (misspelled: correct)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
} 